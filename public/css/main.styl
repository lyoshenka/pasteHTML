@import 'nib'

@font-face
    font-family 'UbuntuBold'
    font-style normal
    font-weight 700
    src local('Ubuntu Bold'), local('Ubuntu-Bold'), url(http://themes.googleusercontent.com/static/fonts/ubuntu/v4/0ihfXUL2emPh0ROJezvraD8E0i7KZn-EPnyo3HZu7kw.woff) format('woff')

@font-face
    font-family 'Ubuntu'
    font-style normal
    font-weight 400
    src local('Ubuntu'), url(http://themes.googleusercontent.com/static/fonts/ubuntu/v4/_xyN3apAT_yRRDeqB3sPRg.woff) format('woff')

::-webkit-scrollbar
    width 15px
    background-color #f0f0f0
    border-left 1px solid #E3E3E3
    

::-webkit-scrollbar-thumb
    background-color #d6d6d6

body
    &:before
        content ""
        position fixed
        top -10px
        left 0
        width 100%
        height 10px
        z-index 100
        box-shadow 0px 0px 10px rgba(0, 0, 0, .2)
    
    margin 0
    padding 0
    font-family sans-serif
    text-rendering optimizeLegibility

a
    text-decoration none
    color #2C88F2
    &:hover
        text-decoration underline
    &:visited
        color #2C88F2

#header
    z-index 100
    opacity 0.7
    position absolute
    right 30px
    top 0
    font-family UbuntuBold, sans-serif
    font-weight 700
    font-size 1.5em
    line-height 40%
    p
        margin: 0
        font-family Ubuntu
        font-size 0.8em
        text-align right

#noscriptmsg
    z-index 100
    display inline-block
    position absolute
    bottom 10%
    right 0
    font-size 1.05em
    font-weight bold

textarea, #editor
    margin 0
    position fixed
    left 0
    right 0
    width 100%
    height 90%

form input
    width 50%
    height 10%
    
    position absolute
    bottom 0
    right 0
    
    color #4A4A4A
    background-color #f0f0f0
    font-family Ubuntu
    font-size 1.5em
    border 1px solid #d6d6d6
    
    &:hover
        background-color #d6d6d6
        cursor pointer
    &[type="submit"]
        right 50%
        border-right 0
        font-size 1.8em
        font-family UbuntuBold

.tinner
    background-color white
    //border-radius 10px
    //border 1px solid #d4d4d4
    padding 10px
    font-size 0.8em
    //box-shadow 0px 0px 12px 0px rgba(0,0,0,0.53)

.tclose
    background-color white
    color #2C88F2
    
    display block
    margin-left auto
    margin-right auto
    text-align center
    
    width 40px
    padding 3px
    border-radius 5px
    &:after
        content "close"
    &:hover
        text-decoration underline
        cursor pointer

.tmask
    background-color #E0E0E0
